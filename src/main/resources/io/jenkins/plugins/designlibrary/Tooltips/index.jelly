<j:jelly xmlns:j="jelly:core" xmlns:s="/lib/samples" xmlns:x="jelly:xml">
  <s:sample>
    <div class="app-component-sample">
      <button tooltip="I am a tooltip" class="jenkins-button jenkins-button--primary">
        Hover over me
      </button>
    </div>
    <pre>
      <code class="sample-remote language-html" data-sample="simple-button.html"/>
    </pre>

    <p class="warning">
      Make sure that text is <a target="_blank" rel="noopener noreferrer" href="https://en.wikipedia.org/wiki/HTML_sanitization">sanitized</a> before displaying
