<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form" xmlns:s="/lib/samples">
  <s:layout>
    <s:section title="Simple select" description="${%usage.2}">
      <div class="jdl-component-group">
        <div class="jdl-component-sample">
          <f:entry title="Fruits">
            <f:select field="fruit"/>
          </f:entry>
        </div>
        <s:code-panes>
          <s:code-pane title="Jelly">
            <s:code language="xml" file="sample2.jelly"/>
          </s:code-pane>
          <s:code-pane title="Java">
            <s:code language="java" file="Sample.java"/>
          </s:code-pane>
        </s:code-panes>
      </div>
    </s:section>

    <s:section title="Advanced select" description="${%usage.1}">
      <div class="jdl-component-group">
        <div class="jdl-component-sample">
          <form action="submit" method="post">
            <f:dropdownDescriptorSelector field="fruit" title="Fruits" descriptors="${it.fruitDescriptors}"/>

            <f:submit value="Save"/>
          </form>
        </div>

        <s:code language="xml" file="sample.jelly"/>
      </div>
    </s:section>

    <s:section title="${%dynamic}" description="${%dynamic.description}">
      <div class="jdl-component-group">
        <div class="jdl-component-sample">
          <form method="post">
            <f:entry title="Country" field="country">
              <f:textbox/>
            </f:entry>
            <f:entry title="State" field="state">
              <f:select/>
            </f:entry>
            <f:entry title="City" field="city">
              <f:select/>
            </f:entry>
          </form>
        </div>
        <s:code-panes>
          <s:code-pane title="Jelly">
            <s:code language="xml" file="dynamic-sample.jelly"/>
          </s:code-pane>
          <s:code-pane title="Java">
            <s:code language="java" file="DynamicSample.java"/>
          </s:code-pane>
        </s:code-panes>
      </div>
    </s:section>
  </s:layout>
</j:jelly>
