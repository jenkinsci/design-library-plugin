{
  "name": "design-library-plugin",
  "version": "1.1.0",
  "author": "Jan Faracik",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jenkinsci/design-library-plugin.git"
  },
  "license": "MIT",
  "main": "./src/main/webapp/js/index.js",
  "bugs": {
    "url": "https://github.com/jenkinsci/design-library-plugin/issues"
  },
  "homepage": "https://github.com/jenkinsci/design-library-plugin#readme",
  "scripts": {
    "dev": "sass --watch src/main/resources/scss/styles.scss src/main/resources/io/jenkins/plugins/designlibrary/styles.css && postcss src/main/resources/io/jenkins/plugins/designlibrary/styles.css --replace --use autoprefixer",
    "mvntest": "exit 0",
    "build": "yarn css:build && yarn css:build:sass &&yarn build:bundle",
    "build:bundle": "parcel build --public-url ./ src/main/ts/index.ts --dist-dir ./src/main/webapp/js",
    "css:build": "sirocco-wc buildCss",
    "css:build:sass": "sass src/main/resources/scss/styles.scss src/main/resources/io/jenkins/plugins/designlibrary/styles.css && postcss src/main/resources/io/jenkins/plugins/designlibrary/styles.css --replace --use autoprefixer",
    "css:watch": "sirocco-wc watchCss",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "prettier": "prettier \"src/main/ts/**/*.ts\" --fix --write",
    "mvnbuild": "yarn build",
    "test": "playwright test",
    "start": "yarn css:build && concurrently -k -r 'yarn start:server' 'yarn css:watch'",
    "start:server": "parcel index.html",
    ":add": "SWC_PREFIX=jio- sirocco-wc add"
  },
  "dependencies": {
    "@fontsource/material-icons": "^4.5.4",
    "@fontsource/material-icons-outlined": "^4.5.4",
    "@fontsource/roboto": "^4.5.8",
    "@material/mwc-button": "^0.27.0",
    "@material/mwc-checkbox": "^0.27.0",
    "@material/mwc-drawer": "^0.27.0",
    "@material/mwc-icon": "^0.27.0",
    "@material/mwc-icon-button": "^0.27.0",
    "@material/mwc-list": "^0.27.0",
    "@material/mwc-notched-outline": "^0.27.0",
    "@material/mwc-select": "^0.27.0",
    "@material/mwc-tab": "^0.27.0",
    "@material/mwc-tab-bar": "^0.27.0",
    "@material/mwc-textfield": "^0.27.0",
    "@swc/helpers": "^0.4.11",
    "axios": "^0.27.2",
    "lit": "^2.3.1",
    "postcss": "^8.4.18",
    "sirocco-wc": "^1.1.3"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^8.0.2",
    "@open-wc/testing": "^3.1.6",
    "@parcel/plugin": "^2.7.0",
    "@parcel/transformer-js": "^2.7.0",
    "@parcel/transformer-typescript-types": "2.7.0",
    "@playwright/test": "^1.26.0",
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "autoprefixer": "10.4.13",
    "buffer": "^6.0.3",
    "concurrently": "^7.3.0",
    "escape-string-regexp": "^5.0.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "parcel": "^2.7.0",
    "parcel-resolver-ts-base-url": "^1.1.5",
    "path": "^0.12.7",
    "postcss-cli": "10.0.0",
    "prettier": "^2.7.1",
    "sass": "1.55.0",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.2",
    "typescript-plugin-css-modules": "^3.4.0",
    "yarn": "^1.22.19"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "overrides": [
      {
        "files": [
          "**/*.spec.ts",
          "**/*.spec.tsx",
          "**/*.spec.js",
          "**/*.spec.jsx"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "off"
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "singleAttributePerLine": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "src/main/ts/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "browserslist": [
    "Chrome > 50"
  ],
  "packageManager": "yarn@3.2.4"
}
